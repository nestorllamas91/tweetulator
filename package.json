  "description": "A surreal discussion with threads.",
  "keywords": [
    "discussion",
    "tweets",
    "threads"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nestorllamas91/tweetulator.git"
  },
  "scripts": {
    "build:dev": "tsc --watch --project tsconfig.server.json",
    "start:dev": "nodemon --require tsconfig-paths/register ./dist/app.js",
    "build:prod": "next build && tsc --project tsconfig.server.json",
    "start:prod": "node --require tsconfig-paths/register ./dist/app.js",
    "lint:code": "next lint --fix --dir ./src/",
    "lint:types": "tsc --noEmit --project tsconfig.json && tsc --noEmit --project tsconfig.server.json",
    "format": "prettier --write .",
    "tsc": "tsc --project tsconfig.server.json",
    "build": "next build && npm run tsc",
    "start": "npm run start:prod"
  },
  "dependencies": {
    "express": "4.17.2",
    "mongoose": "6.1.7",
    "next": "12.0.8",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/mongoose": "5.11.97",
    "@types/node": "17.0.10",
    "@types/react": "17.0.38",
    "autoprefixer": "10.4.2",
    "eslint": "8.7.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "nodemon": "2.0.15",
    "postcss": "8.4.5",
    "prettier": "2.5.1",
    "tailwindcss": "3.0.15",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.4"
  }
}
